---
import CardLinkRectangle from "../components/CardLinkRectangle.astro";
import CardLinkSquare from "../components/CardLinkSquare.astro";
import CTAButton from "../components/CTAButton.astro";
import TestimonyCard from "../components/TestimonyCard.astro";
import TrustNumbers from "../components/TrustNumbers.astro";
import Wrapper from "../components/Wrapper.astro";
import BienestarIcon from "../icons/BienestarIcon.astro";
import GraduateHatIcon from "../icons/GraduateHatIcon.astro";
import HSBCIcon from "../icons/HSBCIcon.astro";
import ModalCurso from "../components/ModalCurso.astro";
---

<Wrapper classname="grid-wrapper">
    <header class="heading-icon h-grid">
        <GraduateHatIcon />
        <h2>¡Conocé nuestros programas!</h2>
    </header>

    <section class="trust-container">
        <TrustNumbers num="300" title="Egresados" />
        <TrustNumbers num="1200" title="Clases impartidas" />
        <TrustNumbers num="15" title="Trayectoria" />
    </section>
    <section class="description">
        <p>
            Aprende nuevas habilidades para mejorar tu empleabilidad en el rubro
            que quieras.
        </p>
    </section>

    <section class="companies">
        <small>Avalados y certificados por:</small>

        <div class="logos">
            <HSBCIcon />
            <HSBCIcon />
            <HSBCIcon />
            
        </div>
    </section>

    <section class="grid">
        <CardLinkSquare
            title="Salud y Belleza"
            path="img/saludybelleza.png"
            desc="Cursos de salud y belleza"
            courseId="salud-belleza"
        />
        <CardLinkSquare
            title="Administración"
            path="img/administracion.png"
            desc="Cursos de administración"
            courseId="administracion"
        />
        <CardLinkRectangle
            title="Organización de eventos"
            path="img/organizacioneventos.png"
            desc="Cursos de organización de eventos"
            courseId="organizacion-eventos"
        />
        <CardLinkSquare
            title="Oficios"
            path="img/oficios.png"
            desc="Cursos de oficios"
            courseId="oficios"
        />
        <CardLinkSquare
            title="Diseño y Marketing"
            path="img/diseniomarketing.png"
            desc="Cursos de diseño y marketing"
            className="last-card"
            courseId="disenio-marketing"
        />
    </section>

    <section class="heading-icon h-testimonies">
        <h2>Experiencias de estudiantes</h2>
    </section>

    <section class="testimonies">
        <TestimonyCard path="img/autor1.png">
            <span slot="quote">
                Las clases son excelentes a nivel profesional al igual que los
                docentes, super cálidos, amables y dispuestos a enseñarte hasta
                que aprendas de verdad
            </span>
            <span slot="author"> María G. </span>
            <span slot="role"> Egresada en Marketing </span>
        </TestimonyCard>
    </section>

    <footer class="button">
        <CTAButton text="Quiero encontrar mi curso ideal" />
    </footer>

    <!-- Modal de cursos global para esta sección -->
    <ModalCurso />
</Wrapper>

<style>
    .heading-icon {
        text-align: center;
    }

    .trust-container {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
    }

    .description {
        text-align: center;
    }

    .companies {
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        gap: 0.5rem;
    }
    .companies small {
        font-weight: 600;
    }
    .logos {
        display: flex;
        justify-content: center;
        gap: 1.25rem;
    }

    .row {
        display: flex;
        gap: 0.75rem;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
    }

    h2,
    p {
        margin: 0;
    }
    h2 {
        font-weight: 600;
    }

    @media screen and (max-width: 400px) {
        .grid {
            grid-template-columns: 1fr;
        }
    }

    @media screen and (min-width: 850px) {
        .h-grid {
            grid-column: 1/5;
            grid-row: 1;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;

            font-size: 1.5rem;
        }
        .trust-container {
            grid-column: 1/5;
            grid-row: 2;
        }
        .description {
            grid-column: 1/5;
            grid-row: 3;
        }
        .description p {
            max-width: 42ch;
            font-size: 1.5rem;
            margin-inline: auto;
        }
        .companies {
            grid-column: 2/4;
            grid-row: 4;
        }
        .grid {
            grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
            grid-auto-flow: dense;
            grid-column: 1/5;
            grid-row: 5;
        }
        .last-card {
            grid-column: 3;
            grid-row: 1;
        }

        .h-testimonies {

            font-size: 1.5rem;

            grid-column: 2/4;
            grid-row: 6;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .testimonies {
            grid-column: 2/4;
            grid-row: 7;
        }
        .button {
            grid-column: 2/4;
            grid-row: 8;
        }
    }

</style>
