---
import CardLink from "../components/CardLink.astro";
import CTAButton from "../components/CTAButton.astro";
import TestimoniesCarousel from "../components/TestimoniesCarousel.astro";
import TrustNumbers from "../components/TrustNumbers.astro";
import Wrapper from "../components/Wrapper.astro";
import GraduateHatIcon from "../icons/GraduateHatIcon.astro";
import HSBCIcon from "../icons/HSBCIcon.astro";
import ModalCurso from "../components/ModalCurso.astro";
import Icon from "../components/Icon.astro";
import programs from "../data/programs.json";

const testimonies = [
    {
        quote: "Inicie con la formación y es mi primer contacto con la página. Las chicas telefónicamente han sido muy atentas.",
        author: "Sonia Francisca Aramendi",
        role: "Estudiante",
        img: "img/authors/sonia_francisca_aramendi.png",
        alt: "Foto de Sonia Francisca Aramendi"
    },
    {
        quote: "El lugar, el cursado, los profes, las personas que trabajan allá son todos muy buenos. Además hacen un trabajo espectacular con los cursos, la plataforma virtual y la enseñanza. ¡Siempre lo recomiendo a todos que me preguntan!",
        author: "Lily",
        role: "Estudiante",
        img: "img/authors/lily.png", 
        alt: "Foto de Lily"
    }
];
---

<Wrapper className="grid-wrapper">
    <header class="heading-icon h-grid">
        <GraduateHatIcon />
        <h2>¡Conocé nuestros programas!</h2>
    </header>

    <section class="trust-container">
        <TrustNumbers num="300" title="Egresados" />
        <TrustNumbers num="1200" title="Clases impartidas" />
        <TrustNumbers num="15" title="Trayectoria" />
    </section>
    <section class="description">
        <p>
            Aprende nuevas habilidades para mejorar tu empleabilidad en el rubro
            que quieras.
        </p>
    </section>

    <section class="companies">
        <small>Avalados y certificados por:</small>

        <div class="logos">
            <img
                    src="img/ministerio-educ-paraguay-white.webp"
                    alt="Logo de Ministerio de Educación y Ciencias de Paraguay"
                    class="MinEducParaguay"
                />
            <Icon icon="CAM-Res" width="80" height="55" />
        </div>
    </section>

    <section class="card-wrapper">
        <hgroup>
            <h4>Cursos con salida laboral</h4>
        </hgroup>
        <section class="grid">
            <!-- Main course cards -->
            {programs.filter(p => p.category === 'salida-laboral').map((program) => (
                <CardLink
                    title={program.title}
                    path={program.path}
                    desc={program.desc}
                    courseId={program.courseId}
                >
                    <Icon icon={program.icon} width="30" slot="icon" />
                </CardLink>
            ))}
        </section>
    </section>

    <section class="heading-icon h-testimonies">
        <h2>Experiencias de estudiantes</h2>
    </section>

    <section class="testimonies">
        <TestimoniesCarousel testimonies={testimonies} />
    </section>

    <footer class="button">
        <CTAButton 
            text="Quiero encontrar mi curso ideal" 
            waMessage="¡Hola! Les escribo desde su web porque quiero encontrar mi curso ideal en CAM." />
    </footer>

    <!-- Modal de cursos global para esta sección -->
    <ModalCurso />
</Wrapper>

<style>
    .heading-icon {
        text-align: center;
    }

    .trust-container {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .description {
        text-align: center;
    }

    .companies {
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        gap: 0.5rem;
    }
    .companies small {
        font-weight: 600;
    }
    .logos {
        display: flex;
        justify-content: center;
        gap: 1.25rem;
    }
    .MinEducParaguay {
        object-fit: contain;
        width: 120px;
    }

    .card-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        grid-column: 1/5;
        grid-row: 5;

        padding: 0.5rem;
        background: #141414;
        background: linear-gradient(
            45deg,
            rgba(20, 20, 20, 1) 0%,
            rgba(30, 30, 30, 1) 35%
        );
        border-radius: 1rem;
    }
    .card-wrapper hgroup h4 {
        font-size: 2rem;
        margin: 0;
        padding: 0.5rem;
        text-align: center;
        background-color: #141414;
        border: 1px solid white;
        border-radius: 1rem;
    }

    .row {
        display: flex;
        gap: 0.75rem;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        align-items: stretch;
    }

    h2,
    p {
        margin: 0;
    }
    h2 {
        font-weight: 600;
    }

    @media screen and (max-width: 450px) {
        .grid {
            grid-template-columns: 1fr;
        }
    }

    @media screen and (min-width: 600px) and (max-width: 849px) {
        .grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media screen and (min-width: 850px) {
        .h-grid {
            grid-column: 1/5;
            grid-row: 1;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;

            font-size: 1.5rem;
        }
        .trust-container {
            grid-column: 1/5;
            grid-row: 2;
        }
        .description {
            grid-column: 1/5;
            grid-row: 3;
        }
        .description p {
            max-width: 42ch;
            font-size: 1.5rem;
            margin-inline: auto;
        }
        .companies {
            grid-column: 2/4;
            grid-row: 4;
        }
        .card-wrapper {
        }
        .grid {
            grid-template-columns: repeat(4, 1fr);
            grid-auto-rows: 1fr;
            /* grid-column: 1/5;
            grid-row: 5; */
        }
        .grid > * {
            min-width: 0;
        }

        .h-testimonies {
            font-size: 1.5rem;
            grid-column: 2/4;
            grid-row: 6;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .testimonies {
            grid-column: 2/4;
            grid-row: 7;
        }
        .button {
            grid-column: 2/4;
            grid-row: 8;
        }
    }

    @media screen and (min-width: 1200px) {
        .grid {
            grid-template-columns: repeat(6, 1fr);
        }
    }
</style>
