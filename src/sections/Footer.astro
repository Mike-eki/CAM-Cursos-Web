---
import Wrapper from "../components/Wrapper.astro";
import WhatsAppIcon from "../icons/WhatsAppIcon.astro";
import FacebookIcon from "../icons/FacebookIcon.astro";
import InstagramIcon from "../icons/InstagramIcon.astro";
import YoutubeIcon from "../icons/YoutubeIcon.astro";
import TiktokIcon from "../icons/TiktokIcon.astro";
import CamLogo from "../icons/CAMIcon.astro";
import PinIcon from "../icons/PinIcon.astro";
import MapIcon from "../icons/MapIcon.astro";
import ScheduleIcon from "../icons/ScheduleIcon.astro";
import ClockIcon from "../icons/ClockIcon.astro";
import EmailIcon from "../icons/EmailIcon.astro";
import ArgentinaFlagIcon from "../icons/ArgentinaFlagIcon.astro";
import ParaguayFlagIcon from "../icons/ParaguayFlagIcon.astro";
---

<Wrapper className="grid-wrapper">
    <footer class="main-footer">
        <nav class="nav-links">
            <figure class="cam">
                <CamLogo />
            </figure>
            <ul>
                <li>
                    <a href="https://wa.me/5493412166867"
                        ><WhatsAppIcon size={24} /></a
                    >
                </li>
                <li>
                    <a href="https://www.facebook.com/institutocam.medicina"
                        ><FacebookIcon /></a
                    >
                </li>
                <li>
                    <a href="https://www.instagram.com/institutocam/?hl=es-la"
                        ><InstagramIcon /></a
                    >
                </li>
                <li>
                    <a href="https://www.youtube.com/@caminstituto5827"
                        ><YoutubeIcon /></a
                    >
                </li>
            </ul>
        </nav>

        <p>
            Contamos con más de 15 años de experiencia brindando cursos
            personalizados de Clases de Apoyo, Medicina e Idiomas. Te preparamos
            con profesionales altamente capacitados para acompañar tu carrera y
            rendir los exámenes de la facultad de medicina en todas las
            materias.
        </p>

        <hgroup class="idiomas">
            <h4>Centro Evaluador Dele & Aplicador Siele y Cele</h4>
            <picture>
                <img
                    src="img/dele_LOGO_white.webp"
                    alt="Logo de DELE"
                    class="DELE"
                />
                <img
                    src="img/siele_LOGO_white.webp"
                    alt="Logo de SIELE"
                    class="SIELE"
                />
                <img
                    src="img/cele_LOGO_white.webp"
                    alt="Logo de CELE"
                    class="CELE"
                />
            </picture>
        </hgroup>

        <nav class="nav-info">
            <!-- General Contact Section -->
            <div class="general-contact">
                <h4>Contacto general</h4>
                <a href="mailto:contacto@caminstituto.com">
                    <EmailIcon color="--hue-purple" size={20} />
                    contacto@caminstituto.com
                </a>
            </div>

            <!-- Argentina Section -->
            <div class="country-section">
                <h4><ArgentinaFlagIcon /> Argentina</h4>
                <div class="country-grid">
                    <div class="info-col">
                        <address>
                            <span class="icon-wrap"><MapIcon color="--hue-purple" /></span>
                            <a href="https://maps.app.goo.gl/YWyaSkCwqar3gCwc8" target="_blank"
                                >Ovidio Lagos 640, Rosario, Santa Fe</a
                            >
                        </address>
                        <div class="info-row v-stack">
                            <div class="row-label">
                                <span class="icon-wrap"><ScheduleIcon color="--hue-purple" /></span>
                                <strong>Horarios:</strong>
                            </div>
                            <div class="row-content">
                                <em>Lunes a Viernes de 9:00 a 16:00 hs</em>
                            </div>
                        </div>
                    </div>

                    <div class="contact-col">
                        <div class="wa-item">
                            <em>Atención en portugués (ingresantes):</em>
                            <a href="https://wa.me/5493412166867" target="_blank">
                                <span class="icon-wrap"><WhatsAppIcon color="--hue-purple" size={20} /></span>
                                +54 9 341 216-6867
                            </a>
                        </div>
                        <div class="wa-item">
                            <em>Atención al cliente:</em>
                            <a href="https://wa.me/5493415469738" target="_blank">
                                <span class="icon-wrap"><WhatsAppIcon color="--hue-purple" size={20} /></span>
                                +54 9 341 546-9738
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="divider"></div>

            <!-- Paraguay Section -->
            <div class="country-section">
                <h4><ParaguayFlagIcon /> Paraguay</h4>
                <div class="country-grid">
                    <div class="info-col">
                        <address>
                            <span class="icon-wrap"><MapIcon color="--hue-purple" /></span>
                            <a href="https://maps.app.goo.gl/gB5FdjtSvNrniHrz9" target="_blank"
                                >4 de Mayo & Avenida Rogelio Benítez, Ciudad del Este, Alto Paraná</a
                            >
                        </address>
                    </div>

                    <div class="contact-col">
                        <div class="wa-item">
                            <em>Atención al cliente:</em>
                            <a href="https://wa.me/595991870719" target="_blank">
                                <span class="icon-wrap"><WhatsAppIcon color="--hue-purple" size={20} /></span>
                                +595 991 870719
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </footer>
</Wrapper>

<style>
    img {
        display: block;
        max-width: 100%;
        object-fit: contain;
    }
    a {
        text-decoration: none;
        color: white;
    }
    ul,
    li {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    figure,
    p,
    h4 {
        margin: 0;
    }
    h4 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text-heading);
    }

    footer {
        padding-block: 2rem;
        padding-inline: 0.5rem;

        display: flex;
        flex-direction: column;
        gap: 3.5rem;
    }

    .nav-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .nav-links ul {
        display: flex;
        gap: 1.25rem;
    }
    .nav-links ul li a {
        transition: transform 0.2s ease, opacity 0.2s ease;
        display: flex;
        opacity: 0.8;
    }
    .nav-links ul li a:hover {
        transform: translateY(-2px);
        opacity: 1;
    }
    .cam {
        width: 110px;
    }

    .main-footer p {
        max-width: 75ch;
        line-height: 1.7;
        font-size: 1.05rem;
        color: var(--color-text-body);
        opacity: 0.9;
    }

    .idiomas {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .idiomas h4 {
        font-size: 1rem;
        opacity: 0.8;
        font-weight: 500;
        letter-spacing: 0.05em;
    }
    picture {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        align-items: center;
    }
    .DELE { width: 85px; }
    .SIELE { width: 125px; }
    .CELE { width: 105px; }

    .nav-info {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        width: 100%;
        max-width: 1000px;
        margin-inline: auto;
    }

    .general-contact {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 0.5rem;
    }

    .general-contact h4 {
        margin-bottom: 0 !important;
        font-size: 1.1rem !important;
        color: #FFF;
        opacity: 1;
    }

    .divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        width: 100%;
        margin-block: 0.5rem;
    }

    .country-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .country-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2.5rem;
        align-items: start;
    }

    .info-col, .contact-col {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .nav-info h4 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
        color: var(--color-heading-text, #fcfcfc);
    }

    .icon-wrap {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        width: 24px;
    }

    .nav-info address,
    .nav-info a,
    .row-label {
        display: flex;
        align-items: center; /* Center-aligned as requested */
        gap: 1rem;
        font-size: 0.95rem;
        color: var(--color-text-body);
        text-wrap: balance;
        transition: all 0.2s ease;
    }

    .info-row.v-stack {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.4rem;
    }

    .row-content {
        padding-left: calc(24px + 1rem); /* Matches icon width + gap */
        font-size: 0.95rem;
        opacity: 0.85;
    }

    .nav-info a:hover {
        color: white;
        transform: translateX(4px);
    }

    .nav-info address {
        font-style: normal;
        opacity: 0.9;
    }

    .nav-info em {
        font-style: normal;
    }

    .wa-item {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .wa-item em {
        font-size: 0.85rem;
        opacity: 0.7;
    }

    .wa-item a {
        font-weight: 500;
        font-size: 1.05rem;
    }

    /* Tablet and Desktop specific adjustments */
    @media screen and (min-width: 850px) {
        .main-footer {
            grid-column: 2/4;
        }

        footer {
            padding-block: 4rem;
        }

        .idiomas h4 {
            text-align: center;
        }
        .idiomas picture {
            justify-content: center;
            gap: 3rem;
        }
    }

    /* Mobile overrides */
    @media screen and (max-width: 650px) {
        .country-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        .nav-info {
            gap: 4rem;
        }
    }

</style>
