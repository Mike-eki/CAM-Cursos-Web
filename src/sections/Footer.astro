---
import Wrapper from "../components/Wrapper.astro";
import WhatsAppIcon from "../icons/WhatsAppIcon.astro";
import FacebookIcon from "../icons/FacebookIcon.astro";
import InstagramIcon from "../icons/InstagramIcon.astro";
import YoutubeIcon from "../icons/YoutubeIcon.astro";
import TiktokIcon from "../icons/TiktokIcon.astro";
import CamLogo from "../icons/CAMIcon.astro";
import PinIcon from "../icons/PinIcon.astro";
import MapIcon from "../icons/MapIcon.astro";
import ScheduleIcon from "../icons/ScheduleIcon.astro";
import ClockIcon from "../icons/ClockIcon.astro";
import EmailIcon from "../icons/EmailIcon.astro";
import ArgentinaFlagIcon from "../icons/ArgentinaFlagIcon.astro";
import ParaguayFlagIcon from "../icons/ParaguayFlagIcon.astro";
---

<Wrapper className="grid-wrapper">
    <footer class="main-footer">
        <nav class="nav-links">
            <figure class="cam">
                <CamLogo />
            </figure>
            <ul>
                <li>
                    <a href="https://wa.me/5493412166867"
                        ><WhatsAppIcon size={24} /></a
                    >
                </li>
                <li>
                    <a href="https://www.facebook.com/institutocam.medicina"
                        ><FacebookIcon /></a
                    >
                </li>
                <li>
                    <a href="https://www.instagram.com/institutocam/?hl=es-la"
                        ><InstagramIcon /></a
                    >
                </li>
                <li>
                    <a href="https://www.youtube.com/@caminstituto5827"
                        ><YoutubeIcon /></a
                    >
                </li>
            </ul>
        </nav>

        <p>
            Contamos con más de 15 años de experiencia brindando cursos
            personalizados de Clases de Apoyo, Medicina e Idiomas. Te preparamos
            con profesionales altamente capacitados para acompañar tu carrera y
            rendir los exámenes de la facultad de medicina en todas las
            materias.
        </p>

        <hgroup class="idiomas">
            <h4>Centro Evaluador Dele & Aplicador Siele y Cele</h4>
            <picture>
                <img
                    src="img/dele_LOGO_white.webp"
                    alt="Logo de DELE"
                    class="DELE"
                />
                <img
                    src="img/siele_LOGO_white.webp"
                    alt="Logo de SIELE"
                    class="SIELE"
                />
                <img
                    src="img/cele_LOGO_white.webp"
                    alt="Logo de CELE"
                    class="CELE"
                />
            </picture>
        </hgroup>

        <nav class="nav-info">
            <div class="flex-two-items">
                <hgroup>
                    <h4><ArgentinaFlagIcon /> Argentina</h4>
                    <address>
                        <PinIcon color="--hue-purple" />
                        <a href="https://maps.app.goo.gl/YWyaSkCwqar3gCwc8"
                            >Ovidio Lagos 640</a
                        >
                    </address>
                    <address>
                        <MapIcon color="--hue-purple" />
                        <a href="https://maps.app.goo.gl/YWyaSkCwqar3gCwc8"
                            >Rosario, Santa Fe</a
                        >
                    </address>
                </hgroup>

                <hgroup>
                    <h4>Horarios</h4>
                    <em>
                        <ScheduleIcon color="--hue-purple" /> Lunes - Viernes
                    </em>
                    <em>
                        <ClockIcon
                            color="--hue-purple"
                            lineColor="--hue-purple-dark"
                        /> 9:00h a 16:00h
                    </em>
                </hgroup>

                <hgroup>
                    <h4><ParaguayFlagIcon /> Paraguay</h4>
                    <address>
                        <PinIcon color="--hue-purple" />
                        <a href="https://maps.app.goo.gl/gB5FdjtSvNrniHrz9"
                            >4 de Mayo & Avenida Rogelio Benitez</a
                        >
                    </address>
                    <address>
                        <MapIcon color="--hue-purple" />
                        <a href="https://maps.app.goo.gl/gB5FdjtSvNrniHrz9"
                            >Ciudad del Este, Alto Paraná</a
                        >
                    </address>
                </hgroup>

                
            </div>

            <hgroup class="flex-one-item">
                <h4>Contactos</h4>
                <a href="#contacto">
                    <EmailIcon color="--hue-purple" size={24} />
                    contacto@caminstituto.com
                </a>
                <a href="https://wa.me/5493412166867" target="_blank">
                    <WhatsAppIcon color="--hue-purple" size={24} />
                    +54 9 341 216-6867
                </a>
                <em class="em-port">
                    Atenção para ingressantes em português
                </em>
                <a href="https://wa.me/5493415469738" target="_blank">
                    <WhatsAppIcon color="--hue-purple" size={24} />
                    +54 9 341 546-9738
                </a>
                <em>Atencion al cliente Paraguay</em>
                <a href="https://wa.me/595991870719" target="_blank">
                    <WhatsAppIcon color="--hue-purple" size={24} />
                    +595 991 870719
                </a>
            </hgroup>
        </nav>
    </footer>
</Wrapper>

<style>
    img {
        display: block;
        max-width: 100%;
        object-fit: contain;
    }
    a {
        text-decoration: none;
        color: white;
    }
    ul,
    li {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    figure,
    p,
    h4 {
        margin: 0;
    }
    h4 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text-heading);
    }

    footer {
        padding-block: 2rem;
        padding-inline: 0.5rem;

        display: flex;
        flex-direction: column;
        gap: 3.5rem;
    }

    .nav-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .nav-links ul {
        display: flex;
        gap: 1.25rem;
    }
    .nav-links ul li a {
        transition: transform 0.2s ease, opacity 0.2s ease;
        display: flex;
        opacity: 0.8;
    }
    .nav-links ul li a:hover {
        transform: translateY(-2px);
        opacity: 1;
    }
    .cam {
        width: 110px;
    }

    .main-footer p {
        max-width: 75ch;
        line-height: 1.7;
        font-size: 1.05rem;
        color: var(--color-text-body);
        opacity: 0.9;
    }

    .idiomas {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .idiomas h4 {
        font-size: 1rem;
        opacity: 0.8;
        font-weight: 500;
        letter-spacing: 0.05em;
    }
    picture {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        align-items: center;
    }
    .DELE { width: 85px; }
    .SIELE { width: 125px; }
    .CELE { width: 105px; }

    .nav-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        justify-content: center;
        gap: 2.5rem 1rem;
    }

    .flex-two-items {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        text-align: left;
    }

    .nav-info hgroup {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.85rem;
    }

    .nav-info h4 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.2rem;
        margin-bottom: 0.25rem;
    }

    .nav-info address,
    .nav-info em,
    .nav-info a {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.95rem;
        color: var(--color-text-body);
        transition: all 0.2s ease;
    }

    .nav-info a:hover {
        color: white;
        transform: translateX(4px);
    }

    .nav-info address {
        font-style: italic;
        opacity: 0.9;
    }

    .nav-info em {
        font-style: italic;
        opacity: 0.7;
        font-size: 0.9rem;
    }

    .em-port {
        margin-top: -0.25rem;
        /* padding-left: 2rem; */
        text-wrap: pretty;
    }

    /* Tablet and Desktop specific adjustments */
    @media screen and (min-width: 600px) {
        .nav-info {
            gap: 3rem 2rem;
        }
    }

    @media screen and (min-width: 850px) {
        .main-footer {
            grid-column: 2/4;
        }

        footer {
            padding-block: 4rem;
        }

        .nav-info {
            margin-inline: auto;
            width: 100%;
            max-width: 900px;
            gap: 4rem 5rem;
        }

        .idiomas h4 {
            text-align: center;
        }
        .idiomas picture {
            justify-content: center;
            gap: 3rem;
        }
    }

    /* Mobile overrides (keeping mobile as it was) */
    @media screen and (max-width: 500px) {
        .nav-info {
            grid-template-columns: 1fr;
            justify-items: left;
            gap: 2.5rem;
        }
        .nav-info hgroup {
            align-items: flex-start;
        }
        .em-port {
            text-align: left;
            padding-left: 0; /* Align with phone on mobile if that was the case */
        }
    }

    /* Ensure em-port is left aligned and looks good on larger screens */
    @media screen and (min-width: 501px) {
        .em-port {
            text-align: left;
        }
    }

</style>
