---
const { classname = "" } = Astro.props;
---

<article class={ classname }>
    <slot />
</article>

<style>
    article {
        padding-inline: 0.75rem;
        padding-block: 1rem;
        border-radius: 1rem;
        background-color: var(--color-container-bg)
    }

    .mobile-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }
</style>