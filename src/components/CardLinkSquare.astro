---
import RedirectIcon from "../icons/RedirectIcon.astro"

const { path, desc = "Imagen de la card", title } = Astro.props
---


<article>
    <header>
        <img src={ path } alt={ desc }>
    </header>
    <footer>
        <RedirectIcon />
        <h2>{ title }</h2>
    </footer>
</article>

<style>
    article {
        width: 100%;
        display: flex;
        flex-direction: column;
        border: 1px solid var(--color-bg-card-border);
        border-radius: 1rem;
    }
    img {
        display: block;
        max-width: 100%;
        width: 100%;
        object-fit: cover;
        object-position: center;
        border-radius: 1rem;
    }
    h2 {
        font-size: 1rem;
        font-weight: normal;
        margin: 0;
        text-align: center;
    }
    footer {
        padding-inline: 0.5rem;
        padding-block: 0.75rem;
        display: flex;
        gap: 0.25rem;
        align-items: center;
        justify-content: center;
        height: 100%;
    }


</style>