---
import { parse } from 'node-html-parser';

export interface Props {
  icon: string;
  [key: string]: any;
}

function getSVG(name: string) {
  const filepath = `/src/svg/${name}.svg`;
  const files = import.meta.glob('/src/svg/**/*.svg', {
  query: '?raw',
  import: 'default',
  eager: true,
}) as Record<string, string>;

  if (!(filepath in files)) {
    throw new Error(`${filepath} not found`);
  }

  let svgContent = files[filepath];
  
  // Remove hardcoded fill colors to allow currentColor inheritance
  svgContent = svgContent.replace(/fill="#[^"]+"/g, '');
  svgContent = svgContent.replace(/\.cls-\d+\s*{[^}]*fill:\s*#[^;]+;?[^}]*}/g, '');
  svgContent = svgContent.replace(/<defs>.*<\/defs>/s, '');
  
  const root = parse(svgContent);

  const svg = root.querySelector('svg');

  if (!svg || !('attributes' in svg) || !('innerHTML' in svg)) {
    throw new Error('No se encontró un elemento SVG válido');
  }

  const { attributes, innerHTML } = svg;

  return {
    attributes,
    innerHTML,
  };
}

const { icon, ...attributes } = Astro.props as Props;
const { attributes: baseAttributes, innerHTML } = getSVG(icon);

const svgAttributes = { ...baseAttributes, ...attributes };
---

<svg
  {...svgAttributes}
  fill="currentColor"
  set:html={innerHTML}
></svg>