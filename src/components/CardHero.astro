---
import ArgentinaFlagIcon from "../icons/ArgentinaFlagIcon.astro";
import ArrowDownIcon from "../icons/ArrowDownIcon.astro";
import CAMIcon from "../icons/CAMIcon.astro";
import ParaguayFlagIcon from "../icons/ParaguayFlagIcon.astro";
import CardCountry from "./CardCountry.astro";

---

<main>
    <header>
        <CAMIcon size="142" />
        <h1>Formarte con acompañamiento hace la diferencia</h1>
    </header>

    <picture>
        <img src="img/hero-image.jpg" alt="hero image" />
    </picture>

    <footer>
        <h2>¡Descubre lo que te espera!</h2>
        <ArrowDownIcon />
    </footer>

    <!-- <div class="countries">
        <CardCountry>
            <ArgentinaFlagIcon slot="flag-icon" />
            <h4 slot="title">Argentina</h4>
        </CardCountry>
        <CardCountry>
            <ParaguayFlagIcon slot="flag-icon" />
            <h4 slot="title">Paraguay</h4>
        </CardCountry>
    </div> -->
</main>

<style>
    .countries {
        display: none;
    }

    main {
        display: flex;
        position: relative;
        flex-direction: column;
        justify-content: space-between;
        aspect-ratio: 1;
        border-radius: 1rem;
        overflow: hidden;
    }

    h1,
    h2 {
        font-size: 1.5rem;
        font-weight: 500;
        text-align: center;
        margin: 0;
    }

    picture {
        display: block;
        position: absolute;
        border-radius: 1rem;
        height: 75%;
        top: 20%;
    }

    header,
    footer {
        padding-inline: 0.75rem;
        padding-block: 1rem;
        background-color: var(--color-container-bg);
        background-clip: padding-box;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border-radius: inherit;

        z-index: 10;
    }
    header {
        color: #0077ff;
        top: 0;
        left: 0;
        gap: 0.5rem;
    }
    header h1 {
        color: var(--color-text-heading);
    }
    img {
        max-width: 100%;
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        object-position: center;
    }
    footer {
        gap: 1.25rem;
    }

    @media screen and (max-width: 480px) {
        main {
            height: 70vh;
        }
    }

    @media screen and (min-width: 600px) {
        main {
            display: grid;
            grid-template-columns: 1fr;
            grid-template-rows: repeat(4, 1fr);
            aspect-ratio: auto;
            gap: 1rem;
            height: 70vh;
        }
        header {
            grid-row: 1;
            grid-column: 1/2;
        }
        picture {
            position: static;
            grid-row: 1/5;
            grid-column: 1/2;
            height: auto;
        }
        img {
            border-radius: 1rem;
        }
        footer {
            grid-row: 4;
            grid-column: 1/2;
        }
    }
</style>
