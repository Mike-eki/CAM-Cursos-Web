---
import programs from "../data/programs.json";
import CardLink from "./CardLink.astro";
import Icon from "./Icon.astro";
import Programas from "../sections/Programas.astro";
import ApoyoRevalida from "../sections/ApoyoRevalida.astro";
import Idiomas from "../sections/Idiomas.astro";

export interface Props {
  id?: string;
  title?: string;
  filterCategory?: string;
  country?: string;
}

const { 
  id = "modalGrid", 
  title = "Nuestros Programas",
  filterCategory,
  country
} = Astro.props;

const filteredPrograms = filterCategory 
  ? programs.filter(p => p.category === filterCategory)
  : programs;
---

<div class="modal-grid" id={id}>
  <div class="modal-overlay" data-close-modal-grid></div>
  
  <div class="modal-content">
    <button class="close-button" data-close-modal-grid aria-label="Cerrar modal">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="modal-header">
      <h2 class="modal-title">{title}</h2>
      <div class="title-underline"></div>
    </div>

    <div class="modal-body">
      {country === "Argentina" ? (
        <div class="country-sections">
          <Programas isModal={true} />
          <div class="section-divider"></div>
          <ApoyoRevalida isModal={true} />
          <div class="section-divider"></div>
          <Idiomas isModal={true} />
        </div>
      ) : (
        <div class="programs-grid">
          {filteredPrograms.map((program) => (
            <CardLink
              title={program.title}
              path={program.path}
              desc={program.desc}
              courseId={program.courseId}
              className={program.className}
              aspectRatio={program.aspectRatio as any}
            >
              <Icon icon={program.icon} width="30" slot="icon" />
            </CardLink>
          ))}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .modal-grid {
    position: fixed;
    inset: 0;
    z-index: 9990; /* Slightly lower than ModalCurso if needed, but both are fixed */
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    padding: 20px;
  }

  .modal-grid.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    cursor: pointer;
  }

  .modal-content {
    position: relative;
    width: 100%;
    max-width: 1100px; /* Much wider than ModalCurso's 400px */
    max-height: 90vh;
    background-color: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    animation: modalScaleUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes modalScaleUp {
    from {
      transform: scale(0.95) translateY(10px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateY(0);
      opacity: 1;
    }
  }

  .close-button {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 10;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .close-button:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: rotate(90deg);
  }

  .modal-header {
    padding: 40px 40px 20px;
    text-align: center;
  }

  .modal-title {
    color: white;
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .title-underline {
    width: 80px;
    height: 4px;
    background: #0077ff;
    margin: 15px auto 0;
    border-radius: 2px;
  }

  .modal-body {
    flex: 1;
    overflow-y: auto;
    padding: 0 40px 40px;
    scrollbar-width: thin;
    scrollbar-color: #0077ff rgba(255, 255, 255, 0.05);
  }

  .modal-body::-webkit-scrollbar {
    width: 8px;
  }

  .modal-body::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
  }

  .modal-body::-webkit-scrollbar-thumb {
    background: #0077ff;
    border-radius: 10px;
  }

  .programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 24px;
    padding-top: 20px;
  }

  .country-sections {
    display: flex;
    flex-direction: column;
    gap: 60px;
    padding: 20px 0;
  }

  .section-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    width: 100%;
  }

  /* Ensure nested wrappers don't look weird in modal */
  .country-sections :global(.grid-wrapper) {
    background: transparent !important;
    padding: 0 !important;
  }

  @media (max-width: 768px) {
    .modal-content {
      width: 95%;
      max-height: 95vh;
    }
    
    .modal-header {
      padding: 30px 20px 10px;
    }

    .modal-title {
      font-size: 1.8rem;
    }

    .modal-body {
      padding: 0 20px 20px;
    }

    .programs-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 16px;
    }
    
    .close-button {
      top: 15px;
      right: 15px;
      width: 36px;
      height: 36px;
    }
  }

  @media (max-width: 480px) {
    .programs-grid {
      grid-template-columns: 1fr;
      gap: 12px;
    }
    
    .modal-header {
      padding: 25px 15px 5px;
    }

    .modal-title {
      font-size: 1.6rem;
    }
  }
</style>

<script>
  function initModalGrid() {
    const modals = document.querySelectorAll('.modal-grid');
    
    modals.forEach(modal => {
      const closeButtons = modal.querySelectorAll('[data-close-modal-grid]');
      
      closeButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          modal.classList.remove('is-open');
          // Only show scroll if no other modal is open
          if (!document.querySelector('.course-modal.is-open')) {
            document.body.style.overflow = '';
          }
        });
      });

      // Close on ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('is-open')) {
          modal.classList.remove('is-open');
          if (!document.querySelector('.course-modal.is-open')) {
            document.body.style.overflow = '';
          }
        }
      });
    });

    // Handle triggers for these modals
    const triggers = document.querySelectorAll('[data-open-modal-grid-id]');
    triggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const modalId = trigger.getAttribute('data-open-modal-grid-id');
        const modal = document.getElementById(modalId);
        if (modal) {
          modal.classList.add('is-open');
          document.body.style.overflow = 'hidden';
        }
      });
    });
  }

  // Initialize on load and on astro page changes
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initModalGrid);
  } else {
    initModalGrid();
  }
</script>
